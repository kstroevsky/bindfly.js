{
  "name": "bindfly",
  "version": "0.1.0",
  "private": true,
  "description": "An optimised canvas beautiful something with multiple parameters. A library and a web-socket based game in future.",
  "homepage": "https://bindfly.onrender.com",
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Kostiantyn Stroievskyi",
    "url": "https://www.linkedin.com/in/kstroevsky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kstroevsky/bindfly.js.git"
  },
  "scripts": {
    "start:react": "react-scripts start",
    "start:dev": "webpack-dev-server --mode development",
    "start": "webpack && webpack serve",
    "build": "webpack",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "glslify-loader": "^2.0.0",
    "noisejs": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "three": "^0.162.0",
    "three.meshline": "^1.4.0",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@types/three": "^0.162.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.0.0-5",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.8.1",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.10",
    "typescript": "^5.4.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "plugins": [
      "react",
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "spread": true,
        "restParams": true
      },
      "sourceType": "module"
    },
    "rules": {
      "no-var": "error",
      "no-tabs": "off",
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1,
          "VariableDeclarator": "first",
          "MemberExpression": 1,
          "ObjectExpression": 1,
          "offsetTernaryExpressions": true
        }
      ],
      "no-return-assign": "off",
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "no-use-before-define": "off",
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "no-undef": "off",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_$",
          "args": "all",
          "argsIgnorePattern": "^_$"
        }
      ],
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": true,
          "shorthandFirst": true,
          "shorthandLast": false,
          "multiline": "last",
          "ignoreCase": true,
          "noSortAlphabetically": true,
          "reservedFirst": true,
          "locale": "auto"
        }
      ],
      "react/jsx-indent": [
        2,
        "tab"
      ],
      "react/jsx-indent-props": [
        2,
        "tab"
      ],
      "import/extensions": "off",
      "react/display-name": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
          "plugin:@typescript-eslint/eslint-recommended"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        },
        "rules": {
          "@typescript-eslint/no-use-before-define": [
            "error"
          ],
          "@typescript-eslint/no-misused-promises": [
            "error",
            {
              "checksVoidReturn": false
            }
          ],
          "@typescript-eslint/no-floating-promises": "off",
          "@typescript-eslint/no-unsafe-assignment": "off",
          "@typescript-eslint/no-unsafe-return": "off",
          "@typescript-eslint/await-thenable": "off",
          "@typescript-eslint/restrict-plus-operands": "error",
          "@typescript-eslint/no-unsafe-member-access": "off",
          "@typescript-eslint/no-unsafe-argument": "warn",
          "@typescript-eslint/no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "^_$",
              "args": "all",
              "argsIgnorePattern": "^_$"
            }
          ]
        }
      },
      {
        "env": {
          "jest": true
        },
        "files": [
          "*.test.js",
          "*.test.ts",
          "*.test.tsx",
          "*.test.jsx"
        ],
        "extends": [
          "plugin:testing-library/react",
          "plugin:jest/all"
        ],
        "rules": {
          "jest/globals": "off",
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ],
    "ignorePatterns": [
      "node_modules",
      "build",
      "dist",
      "public"
    ]
  }
}